<!-- views/home.ejs -->
<%- include("partials/header"); %>

<div class="container">
  <h1>Blog Posts</h1>
  <% posts.forEach(function(post) { %>
    <div class="post">
      <h2><%= post.title %></h2>
      <p><%= post.content %></p>
    </div>
  <% }) %>
  <a href="/compose" class="btn">Compose New Post</a>
</div>

<%- include("partials/footer"); %>
